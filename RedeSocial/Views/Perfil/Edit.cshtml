@model RedeSocial.Models.PerfilViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="w3-sidebar w3-bar-block w3-card-2 w3-animate-opacity" style="left:0;width:20%">
    <div>
        <br />
        <div class="w3-row">
            <img src="~/images/avatar/@Model.Avatar" style="width:60px;height:60px;display: inline-block;" />
            <h4 style="display: inline-block;">@Model.Nome</h4>
        </div>
        <br />
    </div>
    <div class="w3-container w3-dark-grey">
        <h4>Menu</h4>
    </div>
    <a href="~/perfil" class="w3-bar-item w3-button">Home</a>
    <a href="~/perfil/details/@Model.Id" class="w3-bar-item w3-button">Dados do Perfil</a>
    <a class="w3-bar-item w3-button w3-red">Editar Perfil</a>
    <a href="~/mensagem/create" class="w3-bar-item w3-button">Nova Mensagem</a>
    <a href="~/perfil/pesquisa" class="w3-bar-item w3-button">Pesquisa</a>
    <a href="~/amigo" class="w3-bar-item w3-button">Amizades</a>
    <a href="~/perfil/timeline" class="w3-bar-item w3-button">Timeline</a>
    <a href="~/amigo/convites" class="w3-bar-item w3-button">Convites</a>
    <a href="~/perfil/delete/@Model.Id" class="w3-bar-item w3-button">Deletar Perfil</a>
</div>


<div class="w3-container w3-animate-opacity" style="margin-left:20%" id="menu">
    <br /><br />
    <h2>Editar Perfil</h2>
    <br />
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobre" class="control-label"></label>
                <textarea asp-for="Sobre" class="form-control" cols="40" rows="4"></textarea>
                <span asp-validation-for="Sobre" class="text-danger"></span>
            </div>
            <div style="max-height:300px;" class="form-group">
                <label asp-for="Avatar" class="control-label"></label>
                <div>
                    @for (int i = 1; i < 31; i++)
                    {
                        <div style="display:block;float:left;">
                            <input type="radio" asp-for="Avatar" value="@("avatar_"+i+".png")" id="@("avatar_"+i+".png")" />
                            <img style="width:40px;height:40px;" src="@("../../images/avatar/avatar_" + i + ".png")" />
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Salvar" class="btn btn-default btn-primary" />
            </div>
        </form>
    </div>
</div>



